// Header
// --------------------------------------------------
.header {
  background: var(--header-bg-color);
}
.header-inner {
  padding: 20px 0 20px;

  +desktop() {
    paddingForSidebar();
  }
  clearfix();

  +mobile() {
    width: auto;
    /* margin-bottom: 50px; */
    padding: 10px;
  }
}

.site-meta {
  float: left;
  margin-left: -20px;
  line-height: normal;
  border-radius: 6px;

  /* transition-property: background; */
  /* the-transition(); */

  +tablet() {
    margin-left: 25px;
  }
  +mobile() {
    margin-left: 10px;
    /* margin-bottom: 5px; */
    transition-property: none;
    float: right;
    right: 16px;
  }

  .brand {
    padding: 0;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: bolder;
    width: 41px;

    +mobile() { line-height: 34px; }
  
    /* &:hover {
      color: #fff;
    } */
  }
}

