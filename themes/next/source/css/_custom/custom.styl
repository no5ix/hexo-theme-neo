.headroom {
    position:fixed;
    z-index:2040;
    right:0;
    left:0;
    top:0;
    /* box-shadow: 0 1px 3px rgba(26,26,26,.1); */
    /* box-shadow: 0em 0.625em 7.75em 0 #000; */
    box-shadow: 0 -2px 8px rgba(0,0,0,0.65);
    transition:transform .25s ease-in-out;
    will-change:transform;
    +mobile() {
        /* box-shadow: 0em 0.625em 2.75em 0 #000; */
        box-shadow: 0 0px 8px rgba(0,0,0,0.65);
    }
}

.headroom--pinned {
    transform:translateY(0)
}

.headroom--unpinned  {
    transform:translateY(-120%);
}

.headroom-local-search {
    position: absolute;
    z-index: 1040;
    /* width: 400px; */
    top: 90px;
    right: 0;
}

/* 用来动态的给local search result加上当header被收起的时候也跟着一起被收起 */
.headroom-local-search.smooth-transition {
    transition:transform 0.5s ease-in-out;
}



/*代码块复制按钮*/
.highlight-wrap{
    position: relative;
}
.btn-copy {
    display: inline-block;
    cursor: pointer;
    background-color: #b6aeae;
    /* background-image: linear-gradient(#fcfcfc,#eee); */
    border: none;
    border-radius: 6px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-appearance: none;
    font-size: 13px;
    font-weight: 700;
    line-height: 20px;
    outline: none;
    color: #333;
    -webkit-transition: opacity .5s ease-in-out;
    -o-transition: opacity .5s ease-in-out;
    transition: opacity .5s ease-in-out;
    padding: 2px 6px;
    position: absolute;
    right: 7px;
    top: 7px;
    opacity: 0;
    width: 28px;
    height: 28px;
}
.btn-copy span {
    margin-left: 5px;
}
.highlight-wrap:hover .btn-copy{
    opacity: 1;
}

