.headroom {
	position:fixed;
	z-index:2040;
	right:0;
	left:0;
	top:0;
	/* box-shadow: 0 1px 3px rgba(26,26,26,.1); */
	/* box-shadow: 0em 0.625em 7.75em 0 #000; */
	transition:transform .25s ease-in-out;
	will-change:transform;
	/* +mobile() {
		box-shadow: 0em 0.625em 2.75em 0 #000;
