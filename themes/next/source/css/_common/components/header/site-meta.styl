.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { 
    text-align: center;
    position: relative;
    top: 5px;
  }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: var(--brand-color);
  background: $brand-bg;
  border-bottom: none;
  &:hover { color: var(--brand-hover-color); }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: $logo-font-size;
  font-weight: normal;
  font-family: $font-family-logo;
}

@media (hover: hover) { /* 只在 PC 端生效 */
  .site-title::after {
    content: "💨";
    position: absolute;
    left: 100%;
    opacity: 0;
    transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
    transform: translateX(-10px);
  }

  .site-title:hover::after {
    opacity: 1;
    transform: translateX(5px);
  }
}

.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: $subtitle-color;
}

.use-motion {
  /* .brand { opacity: 0; } */

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: 0;
  }
}
