.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { 
    text-align: center;
    position: relative;
    top: 5px;
  }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: var(--brand-color);
  background: $brand-bg;
  border-bottom: none;
  &:hover { color: var(--brand-hover-color); }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: middle;  /* 默认值，适用于大多数浏览器 */
  /* line-height: 36px; */
  font-size: $logo-font-size;
  font-weight: normal;
  font-family: $font-family-logo;

  /* 和 motion.js 里的 site-title 相关motion代码配合使用来实现小车尾气向前开的效果 */
  transform: translateX(35px);
  opacity: 0;
  transition: opacity 0.2s ease-in-out, transform 1s ease-in-out;
  +mobile() {
    transform: translateX(20px);
    transition: opacity 0.8s, transform 1s ease-in-out;
  }
}

@supports (vertical-align: -webkit-baseline-middle) {
  .site-title {
    vertical-align: -webkit-baseline-middle; /* 使用CSS 变量、@supports 规则或浏览器前缀来实现 WebKit 浏览器使用 -webkit-baseline-middle，而其他浏览器使用 middle。 */
  }
}
.site-title.loaded {
  opacity: 1;
  transform: translateX(0);

  &:hover {
    transform: translateX(-5px);
  }
}

/* @media (hover: hover) { 只在 PC 端生效 */
  .site-title::after {
    content: "💨";
    position: absolute;
    left: 100%;
    opacity: 1;
    transition: opacity 0.8s ease-in-out, transform 0.6s ease-in-out;
    transform: translateX(0px);

    +mobile() {
      transform: translateX(-2px);
      transition: opacity 1.8s ease-in-out, transform 0.6s ease-in-out;
    }
  }

  .site-title.loaded::after {
    opacity: 0;
    transform: translateX(35px);

    +mobile() {
      transform: translateX(5px);
    }
  }

  .site-title.loaded:hover::after {
    opacity: 1;
    transform: translateX(5px);
  }

/* } */

.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: $subtitle-color;
}

.use-motion {
  /* .brand { opacity: 0; } */

  .logo, .site-subtitle {
    opacity: 0;
    position: relative;
    top: 0;
  }
}
