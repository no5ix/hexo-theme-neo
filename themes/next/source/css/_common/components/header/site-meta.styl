.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { 
    text-align: center;
    position: relative;
    top: 5px;
  }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: var(--brand-color);
  background: $brand-bg;
  border-bottom: none;
  &:hover { color: var(--brand-hover-color); }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

