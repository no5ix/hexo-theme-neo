.local-search-input-cls {
  width: 200px;
  margin: 10px 0;
  padding: 8px 12px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
}

.site-search-form {
  input {
    &::-ms-clear {
      display: none;
    }
  }
}

#local-search-close {
  width: 20px; 
  height: 20px;
  border-radius: 50%; /* 圆形按钮 */
  border: none; /* 去掉边框 */
  color: #888; 
  font-size: 21px;
  cursor: pointer;
  align-items: center;
  justify-content: center;

  position: absolute;
  right: -11px;
  top: 9px;
  opacity: 1;
  background: transparent;
  width: 20px;
  height: 20px;
  font-style: normal;
  font-weight: normal;
  /* transform: rotateZ(0); */
  /* transition: all 0.3s; */

  display: none;

  +mobile() {
    right: -79px;
    top: 10px;
    font-size: 24px;
    will-change: transform;
    transform: translateX(0);
    transition: transform 0.5s ease-in-out;
  }

  /* 只在支持悬停的设备上应用 :hover 效果, 不在手机/pad上触发 */
  @media (hover: hover) {
    /* 选择器 */
    &:hover {
      color: #ddd0d0;
    }
  }
}

#local-search-close.move {
  /* right: 66px; 目标位置, 不用这种方法, 会因为reflow而掉帧 */  
  /* transform: translateX(-145px); 目标 right = 66px，移动 66 - (-79) = -145px */
  transform: translate3d(-145px, 0, 0);
}

.local-search-result-cls {
  position: absolute;
  z-index: $zindex-4;
  width: 400px;
  top: 90px;
  right: 0;

  /* -webkit-transform: translateY(-100%);
  transform: translateY(-100%);
  -webkit-transition: -webkit-transform 0.8s ease-in-out;
  transition: transform 0.8s ease-in-out; */

  +mobile() {
    top: 100px
    padding: 0
    left: 3%
    margin: 0
    width: 94%
    /* height: 100% */
    border-radius: 0
  }

  .local-search-empty {
    color: #888;
    line-height: 44px;
    text-align: center;
    display: block;
    font-size: 16px;
    font-weight: normal;
  }


  ul {
    width: 500px;
    height: 600px;
    max-height: 650px;
    min-height: 0;


    overflow-y: auto;
    border-radius: 15px;
    border: 0px solid #CCC;
    padding: 34px;
    background: var(--local-search-bg-color);
    /* box-shadow: 0.625em 0.625em 0.75em 0 #ccc; */
    /* box-shadow: 2.475em 2.375em 9.75em 0 #555;; */
    box-shadow: 3px 4px 16px rgba(0, 0, 0, 0.65);

    +mobile() {
      max-height: none;
      padding: 34px;
      left: 0;
      margin: 0;
      width: initial;
      height: auto;
      /* box-shadow: 2.475em 2.375em 2.75em 0 #555;; */
    }
    +tablet() {
      width: 400px;
    }
    li {
      text-align: left;
      //border-bottom: 1px solid #CCC;
      padding-bottom: 20px;
      margin-bottom: 20px;
      line-height: 30px;
      font-weight: normal;

      &:last-child {
        //border-bottom: none;
        margin-bottom: 0;
      }
      a {
        margin-top: 20px;
        font-size: 16px;
      }
      p {
        margin-top: 10px;
        font-size: 14px;
        max-height: 124px;
        overflow: hidden;
      }
      em.search-keyword {
        color: #e58c7c;
      }
    }
  }
}


.local-search-result-cls.active {
  -webkit-transform: translateY(0);
  transform: translateY(0);
}


.local-search-result-cls ul:before {
  content: "";
  position: absolute;
  border: 30px solid var(--local-search-bg-color);
  border-top: 0 solid transparent !important;
  border-right: 30px solid transparent !important;
  border-left: 30px solid transparent !important;
  right: 92px;
  top: -8px;


  +mobile() {
    border-right: 8px solid transparent !important;
    border-left: 13px solid transparent !important;
    right: initial;
    top: -19px;
  }
}

.local-search-result-cls .search-keyword {
  border-bottom: 1px dashed rgb(219, 127, 13);
  font-weight: bold;
  color: var(--local-search-key-word-color);
  /* color: var(--selection-color); */
  /* background-color: var(--selection-bg); */
}

.local-search-plugin {
  .local-search-input-cls {
    opacity: 0.6;
    width: 160px;
    transition: all 0.3s;
    &:hover {
      opacity: 1;
      width: 200px;
      transition: all 0.3s;
    }
  }
  .icon {
    position: relative;
    left: -30px;
    color: #999;
    cursor: pointer;
  }
}



/* loading css1 : Dot Css Loader*/
.loader:before,
.loader:after,
.loader {
  border-radius: 50%;
  width: 1em;
  height: 1em;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation: load7 1.8s infinite ease-in-out;
  animation: load7 1.8s infinite ease-in-out;
}
.loader {
  top: -27px;
  margin: -1em auto;
  /* font-size: 10px; */
  position: relative;
  text-indent: -9999em;
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}
.loader:before {
  left: -3.5em;
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}
.loader:after {
  left: 3.5em;
}
.loader:before,
.loader:after {
  content: '';
  position: absolute;
  top: 0;
}
@-webkit-keyframes load7 {
  0%,
  80%,
  100% {
    box-shadow: 0 2.5em 0 -1.3em #888888;
  }
  40% {
    box-shadow: 0 2.5em 0 0 #888;
  }
}
@keyframes load7 {
  0%,
  80%,
  100% {
    box-shadow: 0 2.5em 0 -1.3em #888888;
  }
  40% {
    box-shadow: 0 2.5em 0 0 #888;
  }
}


