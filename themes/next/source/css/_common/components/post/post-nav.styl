.post-nav {
  display: table;
  margin-bottom: 100px;
  width: 100%;
  /* border-bottom: 1px solid var(--link-color); */
}

.post-nav-divider {
  display: table-cell;
  width: 10%;
}

.post-nav-item {
  display: table-cell;
  padding: 10px 0 0 0;
  width: 45%;
  vertical-align: top;
  +mobile() {
   display: table-header-group;
  }

  a {
    position: relative;
    display: block;
    line-height: 25px;
    font-size: 14px;
    color: var(--link-color);
    border-bottom: none;

    &:hover {
      color: var(--link-hover-color);
      border-bottom: none;
    }

    &:active { top: 2px; }
  }

  .fa {
    position: absolute;
    top: 8px;
    left: 0;
    font-size: 12px;
  }

}

.post-nav-next {
  a { padding-left: 15px; }
}

.post-nav-prev {
  text-align: right;

  a { padding-right: 15px; }

  .fa {
    right: 0;
    left: auto;
  }
}

.post-nav-pre-next-title {
  word-break: break-word;
}