.posts-expand .post-title {
  font-size: 26px;
  /* text-align: center; */
  word-break: break-word;
  font-weight: $posts-expand-title-font-weight

  +mobile() {
    font-size: 22px;
  }
}


.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: var(--link-color);
  /* color: $grey-dim; */
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;
  transition: color 0.3s ease-in-out; /* 平滑的颜色和变换过渡 */

  +mobile() {
    font-size: 28px;
  }

  &:hover {
    color: var(--link-hover-color);
  }

  /* &::before {
    content: "";
