.sidebar {
  position: fixed;
  right: 0;
  top: 0;
  bottom: 0;
  display: none; 

  width: 0;
  z-index: $zindex-5;
  box-shadow: 2px 0px 8px rgba(0,0,0,0.65);

  background: var(--sidebar-background-color);
  -webkit-transform: translateZ(0); // http://stackoverflow.com/questions/17079857/position-fixed-broken-in-chrome-with-flash-behind

  a {
    color: var(--link-color);
    border-bottom-color: $black-light;
    &:hover { color: var(--link-hover-color); }
  }

  +tablet() {
    hide() if not hexo-config('sidebar.onmobile');
  }
  +mobile() {
    hide() if not hexo-config('sidebar.onmobile');
  }

}

.sidebar-inner {
  position: relative;
  padding: 20px 10px;
  color: $grey-dark;
  text-align: center;
  margin-top: 100px;
  +mobile()
  {
    margin-top: 60px;
  }
}

.netease-cloud-music 
{
  position: relative;
  top: 100px;
  +mobile() {
    position: relative;
    top: 20px;
  }
}

$pos = hexo-config('sidebar.position');

if $pos in ('left')
  @import "sidebar-toggle";
  if hexo-config('sidebar.onmobile')
    @import "sidebar-dimmer"
else if $pos in ('right')
  @import "sidebar-toggle-right";
  if hexo-config('sidebar.onmobile')
    @import "sidebar-dimmer-right"

@import "sidebar-author";
@import "site-state";
@import "sidebar-feed-link";
@import "sidebar-author-links";
@import "sidebar-blogroll";
@import "sidebar-nav";
@import "sidebar-toc";
