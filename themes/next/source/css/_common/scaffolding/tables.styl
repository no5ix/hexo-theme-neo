table {
  margin: 20px 0;
  width: $table-width;
  border-collapse: collapse;
  border-spacing: 0;
  /* border: 1px solid var(--table-border-color); */
  font-size: $table-font-size;
  table-layout: fixed;
  word-wrap: break-all;
  border-radius: 12px;
  border-style: hidden;
  box-shadow: 0 0 0 1px var(--table-border-color);
}

